@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-header">
                            <div class="card-title">Profil Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Ad</label>
                                <input type="text" asp-for="Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Soyad</label>
                                <input type="text" asp-for="Surname" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Mail</label>
                                <input type="email" asp-for="Mail" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Kullanıcı Adı</label>
                                <input type="text" asp-for="Username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Şifre</label>
                                <input type="password" asp-for="Password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Şifre Tekrar</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control">
                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary">Güncelle</button>
                                <a href="/menutables/tablelistbystatus" class="btn btn-danger">İptal</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
