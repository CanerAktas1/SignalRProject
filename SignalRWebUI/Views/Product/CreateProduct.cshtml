@model CreateProductDto
@{ 
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productname">Ürün Adı</label>
                                <input type="text" asp-for="ProductName" class="form-control" id="productname">
                            </div>
                            <div class="form-group">
                                <label for="price">Ürün Fiyatı</label>
                                <input type="text" asp-for="Price" class="form-control" id="price">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Ürün Görseli</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Ürün Kategorisini Seçin</label>
                                <select asp-for="CategoryID" asp-items="@ViewBag.Categories" class="form-control"></select> 
                                @* @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.Categories,new{@class="form-control"}) *@
                            </div>
                            <div class="form-group">
                                <label for="description">Ürün Açıklaması</label>
                                <textarea type="text" asp-for="Description" class="form-control" id="description" rows="7"></textarea>
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                            <a href="/Product/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>