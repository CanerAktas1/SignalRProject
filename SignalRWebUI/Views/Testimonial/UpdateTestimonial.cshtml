@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Müşteri Yorumu Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="TestimonialID"/>
                            <div class="form-group">
                                <label for="Name">Müşteri Adı Soyadı</label>
                                <input type="text" asp-for="Name" class="form-control" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Title">Müşteri Ünvan</label>
                                <input type="text" asp-for="Title" class="form-control" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Resim Url</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Comment">Yorum</label>
                                <input type="text" asp-for="Comment" class="form-control" id="Comment">
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                            <a href="#" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

