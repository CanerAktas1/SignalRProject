@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalR | Register</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Sauce1.jpg" style="width:484px; height:655px; object-fit:fill" alt="form">
			</div>
			<form class="form-detail" method="post">
				<h2>Register </h2>
				<div asp-validation-summary="All" style="color:red;"></div>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Your Name" required asp-for="Name">
				</div>
				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" placeholder="Your Surname" required asp-for="Surname">
				</div>
				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" placeholder="Your Username" required asp-for="Username">
				</div>
				<div class="form-row">
					<input type="text"  id="your-email" class="input-text" placeholder="Email Address" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}" asp-for="Mail">
				</div>
				<div class="form-row">
					<input type="password"  id="password" class="input-text" placeholder="Password" asp-for="Password" required>
				</div>
				
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Register">
				</div>
			</form>
		</div>
	</div>
</body>
</html>
