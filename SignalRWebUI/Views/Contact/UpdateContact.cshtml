@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Bilgileri Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ContactID"/>
                            <div class="form-group">
                                <label for="Location">Lokasyon</label>
                                <input type="text" asp-for="Location" class="form-control" id="Location">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon Numarası</label>
                                <input type="text" asp-for="Phone" class="form-control" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Adresi</label>
                                <input type="email" asp-for="Mail" class="form-control" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Alt Başlık</label>
                                <input type="text" asp-for="FooterTitle" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Açık Günler</label>
                                <input type="text" asp-for="OpenDays" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Açık Günler Açıklama</label>
                                <input type="text" asp-for="OpenDaysDescription" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Açık Saatler</label>
                                <input type="text" asp-for="OpenHours" class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="FooterDescription">Açıklama</label>
                                <textarea asp-for="FooterDescription" class="form-control" id="FooterDescription" rows="7"></textarea>
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                            <a href="/Contact/" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

