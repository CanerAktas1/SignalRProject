@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bildirimler ile ilgili işlemleri buradan yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Okundu olarak işaretle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td> @count</td>
                                        <td> @item.Description</td>
                                        <td> @item.Date</td>
                                        @{
                                            if (item.Status == true)
                                            {
                                                <td>Okundu</td>
                                            }
                                            else
                                            {
                                                <td>Okunmadı</td>
                                            }
                                        }
                                        <td><a href="/Notifications/DeleteNotification/@item.NotificationID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Notifications/UpdateNotification/@item.NotificationID" class="btn btn-outline-secondary">Güncelle</a></td>
                                        <td>
                                            <a class="btn btn-outline-dark" style="width:200px; padding-top:20px;" href="/Notifications/ChangeNotificationStatus/@item.NotificationID">
                                                @{
                                                    if (item.Status == true)
                                                    {
                                                        <p>Okunmadı olarak işeretle</p>
                                                    }
                                                    else
                                                    {
                                                        <p>Okundu olarak işaretle</p>
                                                    }
                                                }
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Notifications/CreateNotification" class="btn btn-outline-primary">Bildirim Ekle</a>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

