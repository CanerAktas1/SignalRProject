@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail </h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Alıcı Mail</label>
                                <input type="email" asp-for="ReceiverMail" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Konu</label>
                                <input type="text" asp-for="Subject" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Mesaj</label>
                                <textarea id="tiny" asp-for="Body" rows="7" class="form-control"></textarea>
                            </div>
                            

                            <div class="card-action">
                                <button class="btn btn-primary">Gönder</button>
                                <a href="/menutables/tablelistbystatus" class="btn btn-danger">İptal</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
