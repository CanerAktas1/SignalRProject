@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Code</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Index" asp-controller="QrCode">
                    <input type="text" name="value" />
                    <input type="submit" value="QR Kod Oluştur" class="btn btn-warning" />
                    @if (ViewBag.QRCodeImage != null)
                    {
                        <img src="@ViewBag.QRCodeImage" alt="qrCode" style="width:400px;height:400px;" />
                    }
                    else
                    {
                        <p>Bir Veri Girişi Yapın.</p>
                    }
                </form>
            </div>

        </div>
    </div>
</div>