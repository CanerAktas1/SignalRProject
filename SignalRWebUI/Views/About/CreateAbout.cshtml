@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımızda işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Yazısı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" asp-for="Title" class="form-control" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görselin Url' ini girin</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl">
                            </div>
                            
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" id="Description" rows="7"></textarea>
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                            <a href="/About/" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

