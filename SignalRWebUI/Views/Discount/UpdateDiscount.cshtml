@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Ürün işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="DiscountID"/>
                            <div class="form-group">
                                <label for="Title">Ürün Adı</label>
                                <input type="text" asp-for="Title" class="form-control" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Amount">Ürün İndirim Oranı(örn:%15)</label>
                                <input type="text" asp-for="Amount" class="form-control" id="Amount">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Ürün Görseli Girin</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl">
                            </div><div class="form-group">
                                <label for="Description">Ürün Açıklaması Girin</label>
                                <input type="text" asp-for="Description" class="form-control" id="Description">
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                            <a href="/Discunt/" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

