@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Ekleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık </label>
                                <input type="text" asp-for="Title" class="form-control" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Icon">İkon </label>
                                <input type="text" asp-for="Icon" class="form-control" id="Icon">
                            </div>
                            <div class="form-group">
                                <label for="Url">Link </label>
                                <input type="text" asp-for="Url" class="form-control" id="Url">
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                            <a href="#" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

