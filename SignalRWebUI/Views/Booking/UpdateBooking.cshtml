@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="BookingID"/>
                            <div class="form-group">
                                <label for="Name">Ad Soyad</label>
                                <input type="text" asp-for="Name" class="form-control" id="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon Numarası</label>
                                <input type="text" asp-for="Phone" class="form-control" id="Phone">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Adresi</label>
                                <input type="mail" asp-for="Mail" class="form-control" id="Mail">
                                <span asp-validation-for="Mail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="PersonCount">Kişi Sayısı</label>
                                <input type="number" asp-for="PersonCount" class="form-control" id="PersonCount">
                                <span asp-validation-for="PersonCount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Date">Rezervasyon Tarihi</label>
                                <input type="date" asp-for="Date" class="form-control" id="Date">
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                            <a href="#" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
