        <script type="text/javascript">
            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7074/SignalRHub").build();
                $("#connstatus").text(connection.state);


                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistics");

                    }, 1000);

                }).catch((err) => { console.log(err) });


                connection.on("ReceiveCategoryCount", (categoryCount) => {
                    $("#categoryCount").text(categoryCount);
                });
                
                connection.on("ReceiveProductCount", (productCount) => {
                    $("#productCount").text(productCount);
                });
                
                connection.on("ReceiveActiveCategoryCount", (activeCategories) => {
                    $("#activeCategories").text(activeCategories);
                });
                
                connection.on("ReceivePassiveCategoryCount", (passiveCategories) => {
                    $("#passiveCategories").text(passiveCategories);
                });
                
                connection.on("ReceiveProductCountByHamburgerCategory", (productCountByHamburgerCategory) => {
                    $("#productCountByHamburgerCategory").text(productCountByHamburgerCategory);
                });
                
                connection.on("ReceiveProductCountByDrinkCategory", (productCountByDrinkCategory) => {
                    $("#productCountByDrinkCategory").text(productCountByDrinkCategory);
                });
                
                connection.on("ReceiveAvgProductPrice", (avgPrice) => {
                    $("#avgPrice").text(avgPrice+"₺");
                });
                
                connection.on("ReceiveProductNameByMaxPrice", (maxPrice) => {
                    $("#maxPrice").text(maxPrice);
                });

                connection.on("ReceiveProductNameByMinPrice", (minPrice) => {
                    $("#minPrice").text(minPrice);
                });

                connection.on("ReceiveAvgHamburgerPrice", (avgHamburgerPrice) => {
                    $("#avgHamburgerPrice").text(avgHamburgerPrice + "₺");
                });

                connection.on("ReceiveTotalOrderCount", (totalOrderCount) => {
                    $("#totalOrderCount").text(totalOrderCount);
                })

                connection.on("ReceiveActiveOrderCount", (activeOrderCount) => {
                    $("#activeOrderCount").text(activeOrderCount);
                })

                connection.on("ReceiveLastOrderPrice", (lastOrderPrice) => {
                    $("#lastOrderPrice").text(lastOrderPrice + "₺");
                });

                connection.on("ReceiveTotalMoneyCaseAmount", (moneyCase) => {
                    $("#moneyCase").text(moneyCase + "₺");
                });

                connection.on("ReceiveTotalEarningsToday", (todaysEarnings) => {
                    $("#todaysEarnings").text(todaysEarnings + "₺");
                });

                connection.on("ReceiveTotalTableCount", (totalTableCount) => {
                    $("#totalTableCount").text(totalTableCount);
                });

            });

        </script>
